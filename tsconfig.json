{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "types": ["node"],
    "module": "es2015",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "target": "es6",
    "allowJs": true,
    "jsx": "react-native",
    "lib": ["ES6", "DOM"],
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["src/index.ts", "src", "src/assets", "src/assets/**/*"],
}